<!doctype html>
<html lang="is">

<head>
  <meta charset="utf-8">
  <title><%= locals.title ?? '' %></title>
  <link rel="stylesheet" href="/styles.css">
</head>

<header>
  <div class="header-content">
    <a href="/">
      <img src="./images/logo.png" alt="Logo" class="logo">
    </a>
    <nav>
      <ul>
        <li><a href="/leikir">Síðustu leikir</a></li>
        <li><a href="/stada">Staðan í deildinni</a></li>
        <li class="hover-container">
          <% if (locals.loggedIn) { %>
            <div class="user-info">
              Innsrkáður notandi: <%= locals.user.name %> (<%= locals.user.username %>)
            </div>
          <% } else { %>
            <div class="not-logged-in"><a href="/admin">Innskrá</a></div>
          <% } %>
        </li>
      </ul>
    </nav>
  </div>
</header>

